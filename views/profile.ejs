<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Blog Post</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
      <!-- Welcome Message -->
      <div class="flex justify-between items-center w-full p-8 mb-8 bg-white rounded-xl shadow-lg dark:bg-gray-800">
        <div class="flex items-center">
          <a href="/profile/img/upload" class="flex-shrink-0">
            <img src="/images/uploads/<%= user.profilepic %>" alt="User Profile Picture" class="w-16 h-16 rounded-full mr-4 object-cover overflow-hidden">
          </a>
          <div>
            <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100">Welcome, <%= user.name %>!</h1>
            <p class="mt-2 text-gray-600 dark:text-gray-400">Create a new blog post below.</p>
          </div>
        </div>
        <a href="/logout" class="px-4 py-2 font-semibold text-white bg-red-500 rounded-md hover:bg-red-600 dark:bg-red-700 dark:hover:bg-red-800">
          Logout
        </a>
      </div>
      
      <!-- Blog Post Form -->
      
      <div class="flex flex-col items-center justify-center w-full max-w-2xl mx-auto p-8 space-y-4 bg-white rounded-xl shadow-lg dark:bg-gray-800">
        <form action="/post" method="POST" enctype="multipart/form-data" class="w-full">
          <div class="mb-4">
            <label for="title" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Title</label>
            <input type="text" id="title" name="title" required class="block w-full mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-300"/>
          </div>
      
          <div class="mb-4">
            <label for="content" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Content</label>
            <textarea id="content" name="content" rows="5" required class="block w-full mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-300 resize-none" placeholder="What's on your mind?"></textarea>
          </div>
      
          <div class="mb-4">
            <label for="image" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Upload Image</label>
            <input type="file" id="image" name="image" class="block w-full mt-1 p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-300"/>
          </div>
      
          <div class="text-center">
            <button type="submit" class="px-4 py-2 font-semibold text-white bg-blue-500 rounded-md hover:bg-blue-600 dark:bg-blue-700 dark:hover:bg-blue-800">
              Submit Post
            </button>
          </div>
        </form>
      </div>
      
      
      <!-- Created Posts Section -->
     
      <div class="mt-12 px-8">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Your Posts</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% user.post.reverse().forEach(post => { %>
            <div class="p-4 bg-white rounded-xl shadow-lg dark:bg-gray-800 flex flex-col justify-between">
              <div>
                <a href="/post/data/<%= post._id %>">
                  <% if (post.postpic) { %>
                    <img src="/images/uploads/<%= post.postpic %>" alt="Post Image" class="w-full h-48 object-cover rounded-lg mb-2">
                  <% } %>
                  <h4 class="text-lg font-bold text-gray-800 dark:text-gray-100"><%= post.title %></h4>
                </a>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
      
      
      
    </div>
  </body>
</html>
