<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Blog Post</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
      <!-- Created Posts Section -->
      <div class="mt-12 px-8">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Your Posts</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% user.post.forEach(post => { %>
            <div class="bg-white rounded-xl shadow-lg dark:bg-gray-800 overflow-hidden flex flex-col">
              <% if (post.postpic) { %>
                <div class="w-full">
                  <img src="/images/uploads/<%= post.postpic %>" alt="Post Image" class="w-full h-48 object-cover">
                </div>
              <% } %>
              <div class="flex-1 p-4 overflow-y-auto">
                <h4 class="text-lg font-bold text-gray-800 dark:text-gray-100 mb-2"><%= post.title %></h4>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-4"><%= post.content %></p>
                <div class="flex gap-2 justify-center mt-4">
                  <a href="/like/<%= post._id %>" class="px-4 py-2 font-semibold text-white bg-green-500 rounded-md hover:bg-green-600 dark:bg-green-700 dark:hover:bg-green-800">
                    <small class="text-gray-600 dark:text-gray-400 mb-4 ml-4 text-sm font-semibold gap-1 dark:hover:text-gray-100"><%= post.likes.length %></small>
                    <%= post.likes.indexOf(user._id) === -1 ? '👎' : '👍' %>
                  </a>
                  
                  <a href="/edit/<%= post._id %>" class="px-4 py-2 font-semibold text-white bg-blue-500 rounded-md hover:bg-blue-600 dark:bg-blue-700 dark:hover:bg-blue-800">
                    Edit Post
                  </a>
                  <a href="/delete/<%= post._id %>" class="px-4 py-2 font-semibold text-white bg-red-500 rounded-md hover:bg-red-600 dark:bg-red-700 dark:hover:bg-red-800">
                    Delete
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
