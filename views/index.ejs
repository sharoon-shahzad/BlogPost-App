<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Blog Post</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="min-h-screen bg-gray-50 dark:bg-gray-900">

      <nav class="bg-white shadow-lg">
        <div class="container mx-auto px-6 py-3">
          <div class="flex justify-between items-center">
            <div class="text-2xl font-bold text-gray-800">
              Blolify
            </div>
            <div class="flex items-center space-x-4">
              <a href="/login" class="text-blue-500">Login</a>
              <a href="/signup" class="bg-blue-500 text-white px-3 py-2 rounded">Sign Up</a>
            </div>
          </div>
        </div>
      </nav>
      <!-- Created Posts Section -->
      <div class="mt-12 px-8">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Featured Posts</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% users.reverse().forEach(user => { %>
            <% if (user.post && user.post.length > 0) { %>
              <% user.post.reverse().forEach(post => { %>
                <div class="p-4 bg-white rounded-xl shadow-lg dark:bg-gray-800 flex flex-col justify-between">
                  <div>
                    <a href="/post/data/<%= post._id %>">
                      <% if (post.postpic) { %>
                        <img src="/images/uploads/<%= post.postpic %>" alt="Post Image" class="w-full h-48 object-cover rounded-lg mb-2">
                      <% } %>
                      <h4 class="text-lg font-bold text-gray-800 dark:text-gray-100"><%= post.title %></h4>
                    </a>
                  </div>
                </div>
              <% }); %>
            <% } %>
          <% }); %>
        </div>
      </div>
      
    </div>
  </body>
</html>
